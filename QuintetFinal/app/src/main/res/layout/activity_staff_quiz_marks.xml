<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".StaffQuizMarks">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle4"
        android:padding="10dp"
        android:text="@string/students_marks"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/staff_quiz_student_marks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/staff_quiz_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_info_available"
        android:textAlignment="center"
        android:textStyle="italic"
        android:visibility="gone" />

</LinearLayout>